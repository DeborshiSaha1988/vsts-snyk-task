      "name": "actionTest",
      "type": "boolean",
      "label": "Test",
      "defaultValue": "true",
      "required": true,
      "helpMarkDown": ""
    },
    {
      "name": "actionProtect",
      "type": "boolean",
      "label": "Protect",
      "defaultValue": "false",
      "required": true,
      "helpMarkDown": ""
    },
    {
      "name": "actionMonitor",
      "type": "boolean",
      "label": "Monitor",
      "defaultValue": "false",
      "required": true,
      "helpMarkDown": ""
    },
    {
      "defaultValue": "**\\project.json",
      "helpMarkdown": "",
      "label": "Projects to scan",
      "name": "optionProjectsToScan",
      "required": false,
      "type": "filePath"
    },


    {
      "name": "optionAuthenticationType",
      "type": "radio",
      "label": "Authentication Type",
      "required": true,
      "defaultValue": "none",
      "options": {
        "none": "None",
        "endpoint": "Endpoint",
        "token": "API Token"
      },
      "groupName": "Advanced",
      "visibleRule": "actionProtect=true||actionMonitor=true"
    },
    {
      "name": "optServiceEndpoint",
      "type": "connectedService:Generic:Token",
      "label": "Auth (API Token)",
      "defaultValue": "",
      "required": false,
      "helpMarkDown": "",
      "groupName": "Advanced",
      "visibleRule": "AuthenticationType=endpoint"
    },
    {
      "defaultValue": "",
      "helpMarkdown": "",
