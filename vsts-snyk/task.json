      "name": "optAuth",
      "required": false,
      "type": "string",
      "groupName": "Advanced",
      "visibleRule": "AuthenticationType=token"
    },
    {
      "name": "optionFailBuild",
      "type": "boolean",
      "label": "Fail Build",
      "defaultValue": "true",
      "required": true,
      "helpMarkDown": "",
      "groupName": "Advanced"
    },
    {
      "name": "optionDev",
      "type": "boolean",
      "label": "Scan development dependencies",
      "defaultValue": "false",
      "required": true,
      "helpMarkDown": "",
      "groupName": "Advanced"
    },
    {
      "name": "optionIgnorePolicy",
      "type": "boolean",
