{
  "manifestVersion": 1,
  "id": "jessehouwing-vsts-snyk-task",
  "name": "Snyk Task",
  "version": "0.0.0",
  "publisher": "jessehouwing",
  "targets": [
    {
      "id": "Microsoft.VisualStudio.Services"
    }
  ],
  "scope": [
    "vso.build"
  ],
  "description": "Check the security of your NPM packages.",
  "categories": [
    "Build and release"
  ],
  "tags": [
    "Extension",
    "Build",
    "Snyk",
    "Code Analysis",
    "Security",
    "Scanning",
    "Node", "Npm"
  ],
  "screenshots": [
    {
      "path": "extension/Images/Screenshots/snyk-logo-small.png"
    }
  ],
  "content": {
    "details": {
      "path": "readme.md"
    },
    "license": {
      "path": "license.txt"
    }
  },
  "links": {
    "home": {
      "uri": "https://blog.jessehouwing.nl/"
    },
    "getstarted": {
      "uri": "https://github.com/jessehouwing/vsts-snyk-task/wiki"
    },
    "support": {
      "uri": "https://github.com/jessehouwing/vsts-snyk-task/issues"
    },
    "repository": {
      "uri": "https://github.com/jessehouwing/vsts-snyk-task/"
    },
    "issues": {
      "uri": "https://github.com/jessehouwing/vsts-snyk-task/issues"
    }
  },
  "branding": {
    "color": "rgb(34, 34, 72)",
    "theme": "dark"
  },
  "icons": {
    "default": "extension/images/extension-icon-small.png",
    "large": "extension/images/extension-icon.png"
  },
  "files": [
    {
      "path": "vsts-snyk/node_modules/vsts-task-lib"
    },
    {
      "path": "vsts-snyk/vsts-snyk.js"
    },
    {
      "path": "vsts-snyk/icon.png"
    },
    {
      "path": "vsts-snyk/icon.svg"
    },
    {
      "path": "vsts-snyk/task.json"
    }
  ],
  "badges": [
    {
      "href": "https://paypal.me/jessehouwing/5",
      "uri": "https://www.paypalobjects.com/webstatic/mktg/merchant_portal/button/donate.en.png",
      "description": "Donate"
    }
  ],
  "contributions": [
    {
      "id": "vsts-snyk",
      "type": "ms.vss-distributed-task.task",
      "targets": [
        "ms.vss-distributed-task.tasks"
      ],
      "properties": {
        "name": "vsts-snyk"
      }
    },

    {
      "id": "snykio-service-endpoint",
      "description": "Snyk.io",
      "type": "ms.vss-endpoint.service-endpoint-type",
      "targets": [
        "ms.vss-endpoint.endpoint-types"
      ],
      "properties": {
        "name": "Snyk",
        "displayName": "Snyk.io Auth Token",
        "url": "https://snyk.io/",
        "authenticationSchemes": [
          {
            "type": "ms.vss-endpoint.endpoint-auth-scheme-token"
          }
        ]
      }
    }

  ]
}
